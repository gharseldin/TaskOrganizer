<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgournd"
    android:padding="16dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.9"
        android:padding="10dp"
        android:src="@drawable/hundred_percent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/complete_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text=" "
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_tasks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/complete_date"
            android:text="Tasks"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_complete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_tasks_text"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:text="Complete"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_complete_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/complete_complete_text"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_complete_text"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:text="Pending"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_pending_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/complete_pending_text"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_late_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_pending_text"
            android:layout_marginLeft="40dp"
            android:text="Late"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/complete_late_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/complete_late_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>